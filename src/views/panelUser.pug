extends Bpanel.pug   

block mainContainer
    //<!-- Content Wrapper. Contains page content 
    div(class="content-wrapper")
        //<!-- Content Header (Page header) 
        section(class="content-header")
            div(class="container-fluid")
                div(class="row mb-2")
                    div(class="col-sm-6")
                        h1 #{cabecera}
                    div(class="col-sm-6")
                        ol(class="breadcrumb float-sm-right")
                            li(class="breadcrumb-item") <a href="/panel">Home</a>
                            li(class="breadcrumb-item active") #{cabecera}                            
            //<!-- /.container-fluid 
        
        //<!-- Main content 
        section(class="content")
            //<!-- Default box
            include layout/messagesError.pug
            include layout/messagesSuccesful.pug 
            h5(class="mb-2") <b>Bienvenido a Control de Calidad de Calzado By TNZ Servicios Informaticos.
            div(class="card card-success")
                div(class="card-body")
                    div(class="row")
                        div(class="col-md-3")
                            //Profile Image
                            div(class="card card-primary card-outline")
                                div(class="card-body box-profile")
                                    div(class="text-center")
                                        img(class="profile-user-img img-fluid img-circle"
                                            src="/img/userDefault-160x160.jpg"
                                            alt="User profile picture")
                                        form
                                            .form-group.mx-sm-3.mb-2 
                                                div(class="custom-file mt-2")
                                                    input(type="file" class="custom-file-input col-2" id="customFile")
                                                    label(class="custom-file-label" for="customFile") Elige imagen                                
                                    h3(class="profile-username text-center") #{username}

                                    p(class="text-muted text-center") Software Engineer                                   
                        div(class="col-md-9")
                            div(class="card")
                                div(class="card-header p-2")
                                    ul(class="nav nav-pills")
                                        li(class="nav-item") <a class="nav-link" href="#settings" data-toggle="tab">Editar</a>                           
                                div(class="card-body")
                                    div(class="tab-content")                                        
                                        div(class="active tab-pane" id="settings")
                                            form(class="form-horizontal")
                                                div(class="form-group row")
                                                    label(for="inputName" class="col-sm-2 col-form-label") Name
                                                    div(class="col-sm-10")
                                                        input(type="email" class="form-control" id="inputName" placeholder="Name")                                   
                                                div(class="form-group row")
                                                    label(for="inputEmail" class="col-sm-2 col-form-label") Email
                                                    div(class="col-sm-10")
                                                        input(type="email" class="form-control" id="inputEmail" placeholder="Email")                                        
                                                div(class="form-group row")
                                                    label(for="inputpassword" class="col-sm-2 col-form-label") Password
                                                    div(class="col-sm-10")
                                                        input(type="password" class="form-control" id="inputName2" placeholder="password")
                                                div(class="form-group row")
                                                    label(for="inputpassword" class="col-sm-2 col-form-label") New Password
                                                    div(class="col-sm-10")
                                                        input(type="password" class="form-control" id="inputName2" placeholder="new password")
                                                div(class="form-group row")
                                                    label(for="inputpassword" class="col-sm-2 col-form-label") Confirm New Password
                                                    div(class="col-sm-10")
                                                        input(type="password" class="form-control" id="inputName2" placeholder="confirm new password")                                                                                                                                               
                                                div(class="form-group row")
                                                    div(class="offset-sm-2 col-sm-10")
                                                        button(type="submit" class="btn btn-danger") Submit                      