extends layout

block content
    h2(class="text-center text-uppercase m-bt-4")= `${cabecera}`
    -data = data || {}    
    form(action="." method="POST" class="form-registration")
        label(for="email") Email:
        input(
            type="email"
            id="email"
            name="email"
            class="form-control"
            value=data.email
        )
        input(
            type="submit" 
            value="Submit"
            class="btn btn-lg btn-primary btn-block"
        )